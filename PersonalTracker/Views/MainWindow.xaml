<Window x:Name="WindowMain"
        x:Class="PersonalTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Style="{DynamicResource WindowStyle}"
        Title="{Binding Path=Content.Title, ElementName=MainFrame}"
        WindowState="Maximized"
        ResizeMode="CanResize"
        SizeToContent="Manual"
        Icon="Platinum.ico"
        Loaded="WindowMain_Loaded">
    <Viewbox Stretch="Uniform" Margin="20">
        <Grid>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Source="LoginPage.xaml" />
        </Grid>
    </Viewbox>
</Window>